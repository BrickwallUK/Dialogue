<div class="row categoryheader">

    <div class="col-md-8 categoryheading">
        <h2>@Html.Raw(@Model.Category.Name)</h2>
    </div>
    <div class="col-md-4 categoryrss">
        @if (Html.Settings().AllowRssFeeds)
        {
            <a title="@Html.Lang("Home.Rss")" href="#" class="rsssubscribe">@Html.Lang("Home.Rss")</a>
        }
        @if (Model.User != null && Html.Settings().AllowEmailSubscriptions)
        {
            <a @Html.Raw(subScribe) title="@Html.Lang("Notification.SubscribeByEmail")" href="#" class="emailsubscription" rel="@Model.Category.Id">
                <span class="emailsubscriptionimage" rel="category">@Html.Lang("Notification.Subscribe")</span>
            </a>
            <a @Html.Raw(unSubscribe) title="@Html.Lang("Notification.UnSubscribeByEmail")" href="#" class="emailunsubscription" rel="@Model.Category.Id">
                <span class="emailunsubscriptionimage" rel="category">@Html.Lang("Notification.UnSubscribe")</span>
            </a>
        }
    </div>

</div>

<p>@Html.Raw(AppHelpers.ConvertPostContent(Model.Category.Description))</p>

@if (Model.Topics.TotalCount > 0)
{
    foreach (var topic in Model.Topics)
    {
        var viewModel = new ViewTopicViewModel { Permissions = Model.Permissions, Topic = topic, ShowCategoryName = false };
        Html.RenderPartial(Dialogue.Logic.PathHelper.GetThemePartialViewPath("TopicRow"), viewModel);
    }

    if (Model.Topics.TotalPages > 1)
    {
        @Html.Pager(Convert.ToInt32(Model.PageIndex), Html.Settings().TopicsPerPage, totalCount, null)
    }
}
else
{
    <p>@Html.Lang("Category.NoDiscussions")</p>
}
